{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++20",
                "-I${workspaceFolder}/core/include",
                "-o",
                "${workspaceFolder}/bin/main",
                "${workspaceFolder}/core/src/*.cpp",
                "${workspaceFolder}/tests/UnitTests.cpp",
                "-Wall",
                "-Wextra",
                "-Werror"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}